---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article class="my-12">
  <header>
    <h2 class="title">
      <a href={post.url}> {post.frontmatter.title}</a>
    </h2>

    <div class="text-sm my-2 italic">
      <span class="">Published {post.frontmatter.publishDate}</span>
      <span>|</span>
      <span class="">Reading time x</span>

      <ul class="flex flex-wrap gap-2">
        {post.frontmatter.keywords.map((w) => <li>#{w}</li>)}
      </ul>
    </div>
  </header>
  <p class="my-4">{post.frontmatter.description}</p>
  <a href={post.url}>Read more</a>
</article>
