---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article class="my-12">
  <header>
    <a href={post.url}>
      <h2 class="title">{post.frontmatter.title}</h2>
    </a>
    <div class="text-sm my-2 italic">
      <span class="">Published {post.frontmatter.publishDate}</span>
      <span>|</span>
      <span class="">Reading time x</span>

      <ul class="flex flex-wrap gap-2">
        {post.frontmatter.keywords.map((w) => <li>#{w}</li>)}
      </ul>
    </div>
  </header>
  <p class="my-4">{post.frontmatter.description}</p>
  <a href={post.url}>Read more</a>
</article>
<style>
  article {
    background: rgba(255, 255, 255, 0.25);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    border-radius: 10px;
  }
</style>
