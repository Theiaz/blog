---
import PictureWithLink from "./features/PictureWithLink.astro";
export interface Props {
  title?: string;
  author: string;
  publishDate: string;
  heroImage?: string;
  heroImageAlt?: string;
  isExternalHeroImg: boolean;
  href: string;
}

const {
  author,
  publishDate,
  heroImage,
  heroImageAlt = "",
  isExternalHeroImg,
  title,
  href,
} = Astro.props;
---

<article class="markdown">
  <header>
    {
      heroImage && (
        <PictureWithLink
          src={heroImage}
          alt={heroImageAlt}
          isExternalSrc={isExternalHeroImg}
        />
      )
    }
    {title && <h2 class="my-0">{title}</h2>}
    <div class="italic flex gap-2">
      <span>{publishDate}</span>
      <span>|</span>
      <a href={href}>{author}</a>
    </div>
  </header>
  <section class="mt-8">
    <slot />
  </section>
</article>
