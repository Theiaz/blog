---
import PictureWithLink from "./features/PictureWithLink.astro";
export interface Props {
  title: string;
  author: string;
  publishDate: string;
  heroImage?: string;
  heroImageAlt?: string;
  isExternalHeroImg: boolean;
  href: string;
}

const {
  author,
  publishDate,
  heroImage,
  heroImageAlt = "",
  isExternalHeroImg,
  title,
  href,
} = Astro.props;
---

<article>
  <header>
    {
      heroImage && (
        <PictureWithLink
          src={heroImage}
          alt={heroImageAlt}
          isExternalSrc={isExternalHeroImg}
        />
      )
    }
    <h1 class="my-0">{title}</h1>
    <div class="italic flex gap-2">
      <span>{publishDate}</span>
      <span>|</span>
      <a href={href}>{author}</a>
    </div>
  </header>
  <section class="mt-8">
    <slot />
  </section>
</article>

<style>
  /* @apply not working */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }
</style>
