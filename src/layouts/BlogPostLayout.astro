---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";

export interface Props {
  title: string;
  description: string;
  publishDate: string;
  author: string;
  heroImage: string;
  heroImageAlt: string;
  isExternalHeroImg: boolean;
  href: string;
}

const { content } = Astro.props;
---

<BaseLayout {content.title} {content.description}>
  <BlogPost
    title={content.title}
    author={content.author}
    heroImage={content.heroImage}
    publishDate={content.publishDate}
    heroImageAlt={content.heroImageAlt}
    href={content.authorRef}
    isExternalHeroImg={content.isExternalHeroImg}
  >
    <slot />
  </BlogPost>
</BaseLayout>
