---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";

export interface Props {
  title: string;
  description: string;
  publishDate: string;
  author: string;
  heroImage: string;
  heroImageAlt: string;
  isExternalHeroImg: boolean;
  href: string;
}

const { title, description, publishDate, author, heroImage, heroImageAlt, isExternalHeroImg, href } = Astro.props;
---

<BaseLayout {title} {description}>
  <BlogPost
    title={title}
    author={author}
    heroImage={heroImage}
    publishDate={publishDate}
    heroImageAlt={heroImageAlt}
    href={href}
    isExternalHeroImg={isExternalHeroImg}
  >
    <slot />
  </BlogPost>
</BaseLayout>
